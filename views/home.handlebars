<h1 class="container text-center">Productos</h1>

<div class="container">
    <div class="row">
        {{#each productos}}
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">CÃ³digo: {{this.code}}</li>
                    <li class="list-group-item">ID: {{this.id}}</li>
                    <li class="list-group-item">Disponibles: {{this.stock}}</li>
                    <li class="list-group-item">Precio: ${{this.price}}</li>
                </ul>
            </div>
        </div>
        {{/each}}
    </div>
</div>



