<h1 class="container text-center">Administrar</h1>

<div class="organizar container">
<div class="ingresar-producto">
    <h3 class="text-center">Agregar producto</h3>
<div >
    <form onsubmit="return addProductVisual()" class="container" id="form-post">
        <div class="mb-3">
            <label for="title-product" class="form-label">Titulo:</label>
            <input type="text" class="form-control" id="title-product" aria-describedby="emailHelp">
            {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> --}}
        </div>
        <div class="mb-3">
            <label for="description-product" class="form-label">Descripción:</label>
            <input type="text" class="form-control" id="description-product" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="price-product" class="form-label">Precio:</label>
            <input type="text" class="form-control" id="price-product" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="thum-product" class="form-label">Imagen:</label>
            <input type="text" class="form-control" id="thum-product" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="code-product" class="form-label">Código:</label>
            <input type="text" class="form-control" id="code-product" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="code-product" class="form-label">Cantidad en stock:</label>
            <input type="text" class="form-control" id="stock-product" aria-describedby="emailHelp">
        </div>

        <select id="category-product" class="form-select" aria-label="Default select example">
            <option selected>Categoría</option>
            <option value="masculino">Hombre</option>
            <option value="femenino">Mujer</option>
            <option value="nino">Niño/Niña</option>
        </select>
        <br>
        <input type="submit" class="btn btn-primary" value="Cargar">

    </form>
</div>

</div>

<div class="ver-producto">
    <h3 class="text-center">Productos:</h3>
<div class="new-product" id="new-product">

</div>

</div>
</div>


<div class="text-center container">
    <h3>Eliminar producto:</h3>
    <form onsubmit="return deleteProductVisual()" class="container" id="delete-form">
        <div class="mb-3">
            <label for="id-product" class="form-label">Id:</label>
            <input type="text" class="form-control" id="id-product" aria-describedby="emailHelp">
        </div>

        <br>
        <input type="submit" class="btn btn-primary" value="Eliminar">

    </form>
</div>


